@model QuanLi_WebDienThoai.Models.User
@{
    ViewBag.Title = "InforAccount";
    Layout = "~/Views/Shared/_LayoutPageUserManage.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<style>
    .order-card {
        border: 1px solid #ddd;
    }

    .order-item img {
        max-width: 100%;
        border-radius: 5px;
    }

    .order-item h6 {
        font-weight: bold;
    }

    .order-item p {
        margin-bottom: 5px;
    }
</style>





<div class="content p-3">
    <h5>Thông tin tài khoản</h5>
    <div class="order-card bg-white shadow-sm rounded p-3 mb-3">
        <form action="/Users/InforAccount" method="post">
            <div>
                <strong>Thông tin cá nhân </strong>
                <p style="display:flex;align-items:center">
                    @Model.Name - @Model.DienThoai



                    <div class="form-group">
                        <label for="Tinh">Họ và tên</label>
                        <input class="form-control" type="text" name="Name" value="@Model.Name" required />
                    </div>
                    <div class="form-group">
                        <label for="Quan">Email</label>
                        <input class="form-control" type="text" name="Email" value="@Model.Email" required />
                    </div>
                    <div class="form-group">
                        <label for="Phuong">Điện thoại</label>
                        <input class="form-control" type="text" name="DienThoai" value="@Model.DienThoai" required />
                    </div>
                    <div class="form-group">
                        <label for="SoNha">Giới tính</label>
                        <input class="form-control" type="text" name="GioiTinh" value="@Model.GioiTinh" required />
                    </div>
                    <div class="form-group">
                        <label for="SoNha">Mật khẩu</label>
                        <input class="form-control" type="text" name="Password" value="@Model.Password" required />
                    </div>


</div>
            </p>
    </div>
    </div>
    <div class="order-card bg-white shadow-sm rounded p-3 mb-3 mt-5">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Địa chỉ nhận hàng</strong>

            </div>

        </div>
        <hr>


            <div class="form-group">
                <label for="Tinh">Tỉnh/Thành phố</label>
                <input class="form-control" type="text" name="Tinh" id="Tinh"  required/>
            </div>
            <div class="form-group">
                <label for="Quan">Quận /huyện</label>
                <input class="form-control" type="text" name="Quan" id="Quan" required />
            </div>


            <div class="form-group">
                <label for="Phuong">Phường / Xã </label>
                <input class="form-control" type="text" name="Phuong" id="Phuong" required />
            </div>
            <div class="form-group">
                <label for="SoNha">Số nhà / đường</label>
                <input class="form-control" type="text" name="SoNha" id="SoNha" required />
            </div>



            <button style="margin:10px auto" type="submit" class="btn btn-warning">Cập nhật</button>
        </form>

    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

