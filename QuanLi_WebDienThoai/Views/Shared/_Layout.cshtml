    <!-- Lấy tất cả hình ảnh carousel trong folder -->
    @{ var folderPath = Server.MapPath("~/Content/themes/images/carousel/"); // Đường dẫn thư mục chứa ảnh
                    var imageExtensions = new[] { "*.jpg", "*.jpeg", "*.png", "*.gif", "*.bmp" };

                    // Lấy tất cả file hình ảnh
                    var imagePaths = new List<string>();
                    foreach (var extension in imageExtensions)
                    {
                        imagePaths.AddRange(System.IO.Directory.GetFiles(folderPath, extension));
                    }

                    // Đổi đường dẫn ảnh về dạng URL
                    var imageUrls = imagePaths.Select(img => Url.Content("~/Content/themes/images/carousel/" + System.IO.Path.GetFileName(img))).ToList(); }

    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < imageUrls.Count; i++)
                {
                    var activeClass = (i == 0) ? "active" : ""; // Chỉ đặt class "active" cho hình ảnh đầu tiên
    <div class="item @activeClass">
        <div class="container">
            <a href="#"><img style="width:1170px; height:480px;" src="@imageUrls[i]" alt="special offers" /></a>
            <div class="carousel-caption">
                <h4>Image @i</h4>
                <p>Description for Image @i.</p>
            </div>
        </div>
    </div>}
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
