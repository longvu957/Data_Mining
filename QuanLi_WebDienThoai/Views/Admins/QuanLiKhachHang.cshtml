@model IEnumerable<QuanLi_WebDienThoai.Models.User>

@{
    ViewBag.Title = "QuanLiKhachHang";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<style>
    .btn-them-khuyen-mai {
        background-color: #28a745; /* Màu xanh lá */
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        display: inline-flex;
        align-items: center;
    }

        .btn-them-khuyen-mai i {
            margin-right: 8px; /* Khoảng cách giữa biểu tượng và văn bản */
        }


    a {
        text-decoration: none; /* Không gạch chân */
        color: aliceblue; /* Màu chữ xanh lá */
        font-weight: bold; /* Đậm chữ */
    }

        /* Nếu bạn muốn tắt hiệu ứng hover, không thay đổi màu khi di chuột */
        a:hover {
            color: aliceblue; /* Giữ nguyên màu khi hover */
            text-decoration: none; /* Không có gạch chân khi hover */
        }
</style>
<h2>Quản lí khách hàng</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Role_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Role_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            <div class="button-group">
                <button class="btn btn-primary btn-block">
                    <i class="fa fa-wrench"></i> <a href="/Admins/SuaKH/@item.id">SỬA</a>
                </button>
            </div>
        </td>
    </tr>
}

</table>
<script>
    var xoa = function (id) {
        if (confirm("Bạn có chắc chắn muốn xóa không?")) {
            location.href = "XoaKH/" + id
        }
    }
</script>
<style>
    .button-group {
        display: flex;
        flex-direction: column; /* Xếp theo chiều dọc */
        gap: 5px; /* Khoảng cách giữa các nút */
    }

        .button-group .btn {
            font-weight: bold;
            text-align: left; /* Căn trái cho icon và text */
            display: flex;
            align-items: center; /* Canh giữa icon và chữ */
            justify-content: center;
        }

            .button-group .btn i {
                margin-right: 8px; /* Khoảng cách giữa icon và chữ */
            }
</style>